extends ../layouts/common
block content
	h1(style="text-align:center") CREATE
	if errors
		each error in errors
			.alert.alert-danger=error
	form(action="/users/create", method="POST",class="d-flex", enctype="multipart/form-data")
		.form-group()
			label(for="name") Name
			input(type="text", name="name" class="form-control")
		.form-group()
			label(for="phone") Phone
			input(type="text", name="phone" class="form-control")
		.form-group()
			label(for="avatar") Avatar
			input(type="file", name="avatar" class="form-control" accept="image/png, image/jpeg")

		button(class="btn btn-primary") Create
