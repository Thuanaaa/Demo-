extends ../layouts/common
block content
	h1(style="text-align:center") UPDATE
	if errors
		each error in errors
			.alert.alert-danger=error
	form(action=`/users/update/${user.id}`, method="POST",class="d-flex", enctype="multipart/form-data")
		.form-group()
			label(for="name") Name
			input(type="text", name="name" class="form-control" value=user.name)
		.form-group()
			label(for="phone") Phone
			input(type="text", name="phone" class="form-control" value=user.phone)
		.form-group()
			label(for="avatar") Avatar
			input(type="file", name="avatar" class="form-control" accept="image/png, image/jpeg" value=user.avatar)

		button(class="btn btn-primary") Update
