extends ../layouts/common.pug

block content
    h1 Products
    .row
        each product in products
            .card.col-md-3.ml-5
                img.card-img-top(src=product.image)
                .card-body
                    h5.card-title=product.name
                    p.card-text=product.description
                    a.btn.btn-primary(href='#') Add to cart